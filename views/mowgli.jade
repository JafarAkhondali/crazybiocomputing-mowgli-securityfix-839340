mixin menu_item(menu)
    if menu.children
        ul
            each item in menu.children
                li(id=item.id, class=item.type)
                    if item.type=="link"
                         a(href=item.href,target="_blank")=item.title
                    else
                        a(href="#")=item.title
                    +menu_item(item)


